{% extends "base.jinja2" %}

{% block title %}Top up with Keepz{% endblock %}

{% block content %}

<div class="deposit-topup-layout">
    <section class="deposit-topup-card">
        <form method="post" class="deposit-topup-form">
            {{ form.hidden_tag() }}

            <div class="deposit-row">
                <div class="deposit-field deposit-field-amount">
                    <label class="form-label" for="amount">Amount</label>
                    {{ form.amount(class_='form-input', step='0.01', min='0.01', inputmode='decimal', autocomplete='off', placeholder='100') }}
                    {% if form.amount.errors %}
                    <div class="form-error">{{ form.amount.errors[0] }}</div>
                    {% endif %}
                </div>

                <div class="deposit-field deposit-field-currency">
                    <label class="form-label" for="currency">Currency</label>
                    {{ form.currency(class_='form-input') }}
                    {% if form.currency.errors %}
                    <div class="form-error">{{ form.currency.errors[0] }}</div>
                    {% endif %}
                </div>
            </div>

            {% if form.to_entity_id.errors %}
            <div class="form-error">{{ form.to_entity_id.errors[0] }}</div>
            {% endif %}

            <div class="deposit-topup-actions">
                {{ form.submit(class_='big-button', value='Top up') }}
            </div>
        </form>
    </section>
</div>
{% endblock %}
