{% macro render_form(form) %}

<table>
    {% for field in form %}
    <tr>
        {% if field.type not in ('CSRFTokenField', 'SubmitField') %}
        <td>{{ field.label() }}</td>
        {% endif %}
        <td>{{ field() }}</td>
    </tr>
    {% endfor %}
</table>

{% if form.errors %}
<ul class="errors">
    {% for field_name, field_errors in form.errors|dictsort if field_errors %}
    {% for error in field_errors %}
    <li>{{ form[field_name].label }}: {{ error }}</li>
    {% endfor %}
    {% endfor %}
</ul>
{% endif %}

{% endmacro %}