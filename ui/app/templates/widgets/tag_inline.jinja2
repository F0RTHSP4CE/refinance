{% macro tag_inline(tag) %}
{%- set hue = (tag.id * 41.9) % 360 -%}
{%- set color = "hsl(" + hue|string + ", 66%, 44%)" -%}

<small class="tag-badge" style="border-color: {{ color }}">
    <a style="color: {{ color }}" href="{{ url_for('tag.detail', id=tag.id )}}">{{ tag.name }}</a>
</small>
{% endmacro %}